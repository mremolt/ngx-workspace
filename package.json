{
  "name": "ngx-workspace",
  "version": "1.0.0",
  "description": "NG multi app workspace example",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json -t verbose",
    "watch": "webpack-dev-server --config config/webpack.config.development.js",
    "compile": "cross-env NODE_ENV=production webpack --config config/webpack.config.production.js",
    "build": "run-s lint test:coverage compile",
    "watch:default-app": "cross-env APP_NAME=default-app npm run watch",
    "compile:default-app": "cross-env APP_NAME=default-app npm run build",
    "docs:default-app":
      "compodoc apps/default-app -n 'NGX Default App Docs' -t -p tsconfig.json -d reports/default-app/docs",
    "build:default-app": "run-s compile:default-app docs:default-app",
    "build:default-app:staging": "cross-env APP_ENV=staging run-s compile:default-app docs:default-app",
    "serve:default-app": "serve dist/default-app -p 8080 -c 0 -s",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:cleanup": "jest --clearCache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/common": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "bootstrap": "^4.1.1",
    "core-js": "^2.5.6",
    "hash-it": "^3.1.2",
    "localforage": "^1.7.1",
    "normalizr": "^3.2.4",
    "ramda": "^0.25.0",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0-alpha.2",
    "redux-persist": "^5.9.1",
    "reselect": "^3.0.1",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-optimizer": "^0.6.3",
    "@angular/compiler": "^6.0.2",
    "@angular/compiler-cli": "^6.0.2",
    "@angularclass/hmr": "^2.1.3",
    "@compodoc/compodoc": "^1.1.3",
    "@ngtools/webpack": "^6.0.3",
    "@types/lolex": "^2.1.2",
    "@types/node": "^10.1.2",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/redux-logger": "^3.0.6",
    "@types/redux-persist": "^4.3.1",
    "@types/webpack-env": "^1.13.6",
    "app-root-path": "^2.0.1",
    "autoprefixer": "^8.5.0",
    "circular-dependency-plugin": "^5.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "is-primitive": "^3.0.0",
    "jest": "^22.4.4",
    "jest-preset-angular": "^5.2.2",
    "lolex": "^2.6.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "offline-plugin": "^5.0.3",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "raw-loader": "^0.5.1",
    "redux-devtools-extension": "^2.13.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-logger": "^3.0.6",
    "rxjs-tslint-rules": "^4.2.1",
    "sass-loader": "^7.0.1",
    "serve": "^6.5.7",
    "ts-node": "^6.0.3",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "tslint-angular": "^1.1.2",
    "typescript": "2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.13.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "webpack-pwa-manifest": "^3.6.2",
    "webpack-subresource-integrity": "^1.1.0-rc.4"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/config/setup-jest.ts",
    "modulePathIgnorePatterns": ["<rootDir>/dist"],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "coverageDirectory": "reports/coverage",
    "collectCoverageFrom": [
      "libs/**/*.ts",
      "apps/**/*.ts",
      "!**/main.ts",
      "!**/locale/**",
      "!**/*.d.ts",
      "!**/service-worker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 15,
        "functions": 35,
        "lines": 45,
        "statements": 40
      }
    },
    "moduleNameMapper": {
      "@mr/redux-tools": "<rootDir>/libs/redux-tools",
      "@mr/ngx-tools": "<rootDir>/libs/ngx-tools",
      "@mr/pages": "<rootDir>/libs/pages"
    }
  }
}
